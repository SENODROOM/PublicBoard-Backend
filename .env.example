# MongoDB connection string (Atlas or local)
MONGODB_URI=mongodb://localhost:27017/publicboard

# JWT signing secret — use a long random string in production
JWT_SECRET=change_this_to_a_long_random_secret

# Server port
PORT=5000

# Stripe secret key (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# ── Admin Account (auto-created on server startup) ────────────────────────
# The server will create this admin user in MongoDB automatically.
# Change these and restart the server to update admin credentials.
ADMIN_EMAIL=admin@publicboard.com
ADMIN_PASSWORD=Admin@1234
ADMIN_NAME=Super Admin
